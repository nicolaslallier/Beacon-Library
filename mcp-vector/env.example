# MCP Vector Server Configuration
# Copy this file to .env and adjust values as needed

# Service
ENV=local
LOG_LEVEL=INFO

# ChromaDB
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Ollama (embeddings)
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# PostgreSQL (for library metadata)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=beacon_user
POSTGRES_PASSWORD=beacon_password
POSTGRES_DB=beacon_library

# MCP settings
MCP_RATE_LIMIT_REQUESTS=100
MCP_RATE_LIMIT_WINDOW=60
MCP_DEFAULT_WRITE_ENABLED=false

# Vector search settings
DEFAULT_TOP_K=8
LOW_CONFIDENCE_THRESHOLD=0.3

# Observability (optional)
OTLP_ENDPOINT=http://beacon-library-alloy:4317
OTLP_ENABLED=false
